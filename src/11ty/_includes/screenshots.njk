<section id="screenshots" class="py-20 px-4">
  <div class="container mx-auto max-w-6xl">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4">See It In Action</h2>
      <p class="text-xl text-gray-600 dark:text-gray-400">Beautiful on every device</p>
    </div>

    <div class="flex flex-col lg:flex-row gap-12 items-center justify-center">
      <!-- iPhone Screenshots -->
      {% if config.screenshots.iphone %}
      <div class="flex-1">
        <h3 class="text-2xl font-bold text-center mb-6">iPhone</h3>
        <div class="flex gap-4 overflow-x-auto pb-4 scrollbar-hide justify-center">
          {% for screenshot in config.screenshots.iphone %}
          <div class="flex-shrink-0 w-[260px]">
            <img
              src="{{ screenshot }}"
              alt="iPhone screenshot {{ loop.index }}"
              class="w-full h-auto rounded-2xl shadow-2xl border border-gray-200 dark:border-gray-700"
              loading="lazy"
              onerror="this.style.display='none'"
            />
          </div>
          {% endfor %}
        </div>
      </div>
      {% endif %}

      <!-- iPad Screenshots -->
      {% if config.screenshots.ipad %}
      <div class="flex-1">
        <h3 class="text-2xl font-bold text-center mb-6">iPad</h3>
        <div class="flex gap-4 overflow-x-auto pb-4 scrollbar-hide justify-center">
          {% for screenshot in config.screenshots.ipad %}
          <div class="flex-shrink-0 w-[360px]">
            <img
              src="{{ screenshot }}"
              alt="iPad screenshot {{ loop.index }}"
              class="w-full h-auto rounded-2xl shadow-2xl border border-gray-200 dark:border-gray-700"
              loading="lazy"
              onerror="this.style.display='none'"
            />
          </div>
          {% endfor %}
        </div>
      </div>
      {% endif %}
    </div>

    <div class="text-center mt-12">
      <p class="text-sm text-gray-500 dark:text-gray-400">
        ðŸ’¡ Tip: Add your screenshots to <code class="px-2 py-1 bg-gray-100 dark:bg-gray-800 rounded">public/screenshots/</code>
      </p>
    </div>
  </div>
</section>
